# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Required: Google Gemini AI API Key
GEMINI_API_KEY=your_google_gemini_api_key_here

# Optional: Server Configuration
PORT=5001
FLASK_ENV=production

# Optional: Keep-alive service configuration
# Set this to your deployed service URL to enable keep-alive functionality
# Example: https://your-service-name.com
KEEP_ALIVE_URL=
RENDER_EXTERNAL_URL=

# Optional: AI Service Resilience Configuration
# Retry configuration for AI service calls
AI_MAX_RETRIES=3
AI_BASE_DELAY=1.0
AI_MAX_DELAY=30.0
AI_JITTER_MAX=0.5
AI_EXPONENTIAL_BASE=2.0

# Circuit breaker configuration for fault tolerance
AI_CIRCUIT_BREAKER_THRESHOLD=5
AI_CIRCUIT_BREAKER_TIMEOUT=60
AI_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
